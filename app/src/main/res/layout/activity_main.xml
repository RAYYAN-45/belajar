<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.androi  d.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="32dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/str_konversi_suhu"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Hasil"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="0"
        android:textSize="78sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Inputnilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/str_masukkan_nilai_celcius"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="48dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/BtnCelciustoReamur"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Celcius to Reamur" />

            <Button
                android:id="@+id/BtnReamurtoCelcius"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Reamur to Celcius" />

            <Button
                android:id="@+id/BtnFahrenheittoReamur"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Fahrenheit to Reamur" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/BtnCelciustoFahrenheit"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Celcius to Fahrenheit" />

            <Button
                android:id="@+id/BtnReamurtoFahrenheit"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Reamur to Fahrenheit" />

            <Button
                android:id="@+id/BtnFahrenheittoCelcius"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Fahrenheit to Celcius" />
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:barrierDirection="top" />

</LinearLayout>
